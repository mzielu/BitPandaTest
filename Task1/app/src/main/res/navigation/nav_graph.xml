    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_list">

    <fragment
        android:id="@+id/nav_list"
        android:name="com.bitpanda.developertest.ui.main.list.ListFragment"
        android:label="ListFragment">
        <action
            android:id="@+id/action_nav_list_to_nav_details"
            app:destination="@id/nav_details" />
    </fragment>

    <fragment
        android:id="@+id/nav_details"
        android:name="com.bitpanda.developertest.ui.main.details.DetailsFragment"
        android:label="DetailsFragment" />

</navigation>
